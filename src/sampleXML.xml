<?xml version="1.0"?>

<!-- Attributes of a person within an XML file -->
<simcity>
	<person name="Batman">

		<!-- Beginning amount of money -->
		<money>100000</money>

		<!-- The Person's job -->
		<job>
			<building>Restaurant1</building>
			<position>Host</position>
			<shift>1</shift>
		</job>

		<!-- The specific home Person resides -->
		<residency>
			<home>Home1</home>
		</residency>

		<!-- Properties owned by person -->
		<property>
			<address>Home1</address>
		</property>

		<!-- Transportation preference -->
		<transportation>walk</transportation>
	</person>

</simcity>